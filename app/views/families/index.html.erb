<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>All Families</h1>

  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>Family Name</th>
        <th>First Parent's Name</th>
        <th>First Parent's Phone</th>
        <th>Second Parent's Name</th>
        <!--        <th>Second Parent's Phone</th>-->
        <th>Kids</th>
        <th style="text-align:center">Add to Family</th>
        <th colspan="3">More Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @families.each do |family| %>
      <tr>
        <td><%= family.fname %></td>
        <td><%= family.parent1_name %></td>
        <td><%= number_to_phone(family.parent1_phone, :area_code => true) %></td>
        <td><%= family.parent2_name %></td>
        <!--        <td>< %= number_to_phone(family.parent2_phone, :area_code => true) %></td>-->
        <td><% family.kids.each do |kid| %>
          &#8226; <%= link_to kid.name, edit_kid_path(kid) %><br>
          <% end %>
        </td>
        <td align="center"><%= link_to fa_icon('child'), newchild_family_path(family) %></td>
        <td><%= link_to fa_icon('eye'), family %></td> 
        <td><%= link_to fa_icon('pencil'), edit_family_path(family) %></td>
        <td><%= link_to fa_icon('trash'), family, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Add New Family', new_family_path, :class => "btn btn-medium btn-info" %>
</div>